{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "types/*": ["src/types/*"]  // Add this path mapping for your custom types
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
